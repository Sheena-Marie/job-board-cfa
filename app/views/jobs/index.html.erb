<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Job Type</th>
      <th>Due</th>
      <th>Urgent</th>
      <th>Contact Info</th>
      <th>Payment</th>
      <th>Job Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name %></td>
        <td><%= job.job_type %></td>
        <td><%= job.time_to_complete %></td>
        <td><%= job.urgent %></td>
        <td><%= job.contact_info %></td>
        <td><%= number_to_currency(job.price) %></td>
        <td><%= truncate(job.description, :length => 50) %></td>
        <td><%= link_to 'Show', job %></td>
        <!-- <td><%= link_to 'Edit', edit_job_path(job) %></td> -->
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

