<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Job type</th>
      <th>Time to complete</th>
      <th>Urgent</th>
      <th>Contact info</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name %></td>
        <td><%= job.job_type %></td>
        <td><%= job.time_to_complete %></td>
        <td><%= job.urgent %></td>
        <td><%= job.contact_info %></td>
        <td><%= job.price %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

